{
  "name": "pathephone-desktop",
  "productName": "Pathephone",
  "description": "Distributed audio player",
  "version": "0.0.0-development",
  "private": true,
  "author": "Maxim Ilyin <negamaxi@gmail.com>",
  "copyright": "Copyright Â© 2018 Maxim Ilyin",
  "license": "MIT",
  "homepage": "https://pathephone.github.io",
  "engines": {
    "node": ">=9.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pathephone/pathephone-desktop.git"
  },
  "main": "dist/main/main.js",
  "go-ipfs": {
    "version": "v0.4.16"
  },
  "electronWebpack": {
    "main": {
      "webpackConfig": "build/webpack.main.config.js"
    },
    "renderer": {
      "webpackConfig": "build/webpack.renderer.config.js"
    }
  },
  "build": {
    "appId": "space.metabin.pathephone",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "./dist/main/**/*",
      "./dist/renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/indicator_icons",
        "to": "./indicator_icons"
      },
      {
        "from": "node_modules/go-ipfs-dep/go-ipfs/LICENSE",
        "to": "go-ipfs/LICENSE"
      }
    ],
    "linux": {
      "category": "AudioVideo",
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ],
      "extraResources": [
        {
          "from": "node_modules/go-ipfs-dep/go-ipfs/ipfs",
          "to": "go-ipfs/ipfs"
        }
      ],
      "desktop": {
        "StartupWMClass": "Pathephone"
      }
    },
    "mac": {
      "extraResources": [
        {
          "from": "node_modules/go-ipfs-dep/go-ipfs/ipfs",
          "to": "go-ipfs/ipfs"
        }
      ]
    },
    "win": {
      "extraResources": [
        {
          "from": "node_modules/go-ipfs-dep/go-ipfs/ipfs.exe",
          "to": "go-ipfs/ipfs.exe"
        }
      ]
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "compile:e2e": "webpack --config=build/webpack.e2e.config.js",
    "compile:unit": "webpack --config=build/webpack.unit.config.js",
    "compile:threads": "webpack --config=build/webpack.threads.config.js",
    "compile:app": "yarn compile:threads && electron-webpack",
    "compile:app:dev": "yarn compile:threads && electron-webpack dev",
    "prebuild": "yarn compile:app",
    "build": "electron-builder",
    "build:dir": "yarn build --dir -c.compression=store -c.mac.identity=null",
    "get-ipfs": "yarn add --dev go-ipfs-dep",
    "get-ipfs:win": "cross-env TARGET_OS=windows yarn get-ipfs",
    "get-ipfs:lin": "cross-env TARGET_OS=linux yarn get-ipfs",
    "get-ipfs:mac": "cross-env TARGET_OS=darwin yarn get-ipfs",
    "pretest:unit": "cross-env NODE_ENV=testing yarn compile:unit",
    "test:unit": "cd .temp/unit && mocha",
    "pretest:e2e": "cross-env NODE_ENV=testing yarn build:dir && yarn compile:e2e",
    "test:e2e": "cd .temp/e2e && mocha",
    "test:lint": "eslint --ext .js --ext .jsx ./src/renderer ./src/main ./src/shared ./src/e2e ./build",
    "test:flow": "flow status",
    "test": "yarn test:lint && yarn test:flow && yarn test:unit && yarn test:e2e",
    "lint": "yarn test:lint -- --fix",
    "start": "cross-env NODE_ENV=development yarn compile:app:dev",
    "start:offline": "cross-env OFFLINE=true yarn start"
  },
  "dependencies": {
    "@metabin/gate": "2.4.1",
    "ajv": "^6.1.1",
    "dexie": "^2.0.4",
    "dot-prop-immutable": "^1.4.0",
    "electron-context-menu": "^0.10.0",
    "file-type": "^8.0.0",
    "fs-jetpack": "^2.1.0",
    "get-value": "^3.0.1",
    "ipfsd-ctl": "^0.39.0",
    "mime": "^2.3.1",
    "music-metadata": "^2.2.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-icons": "^2.2.7",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-toggle-view": "^1.0.0",
    "read-chunk": "^2.1.0",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.9.1",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1",
    "semver": "^5.5.0",
    "source-map-support": "^0.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-proposal-class-properties": "7.0.0-beta.55",
    "@babel/plugin-proposal-decorators": "7.0.0-beta.55",
    "@babel/plugin-proposal-do-expressions": "7.0.0-beta.55",
    "@babel/plugin-proposal-export-default-from": "7.0.0-beta.55",
    "@babel/plugin-proposal-export-namespace-from": "7.0.0-beta.55",
    "@babel/plugin-proposal-function-bind": "7.0.0-beta.55",
    "@babel/plugin-proposal-function-sent": "7.0.0-beta.55",
    "@babel/plugin-proposal-json-strings": "7.0.0-beta.55",
    "@babel/plugin-proposal-logical-assignment-operators": "7.0.0-beta.55",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.0.0-beta.55",
    "@babel/plugin-proposal-numeric-separator": "7.0.0-beta.55",
    "@babel/plugin-proposal-optional-chaining": "7.0.0-beta.55",
    "@babel/plugin-proposal-pipeline-operator": "7.0.0-beta.55",
    "@babel/plugin-proposal-throw-expressions": "7.0.0-beta.55",
    "@babel/plugin-syntax-dynamic-import": "7.0.0-beta.55",
    "@babel/plugin-syntax-import-meta": "7.0.0-beta.55",
    "@babel/polyfill": "^7.0.0-beta.49",
    "@babel/preset-flow": "^7.0.0-rc.1",
    "@babel/preset-react": "^7.0.0-beta.49",
    "@babel/register": "^7.0.0-beta.49",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/exec": "^2.0.0",
    "@semantic-release/git": "^7.0.0",
    "babel-eslint": "^8.2.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.1.3",
    "css-loader": "^1.0.0",
    "devtron": "^1.4.0",
    "electron": "^2.0.2",
    "electron-builder": "^20.0.0",
    "electron-debug": "^2.0.0",
    "electron-mocha": "^6.0.0",
    "electron-webpack": "^2.1.2",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "flow-bin": "^0.79.1",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "glob": "^7.1.2",
    "go-ipfs-dep": "^0.4.17",
    "mocha": "^5.0.0",
    "node-sass": "^4.7.1",
    "sass-loader": "^7.0.0",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.0.0",
    "webpack-node-externals": "^1.7.2",
    "worker-loader": "^2.0.0"
  }
}
